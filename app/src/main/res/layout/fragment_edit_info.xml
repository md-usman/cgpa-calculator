<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="200dp"
    android:padding="24dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edit_student_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:hint="Name"/>

    <EditText
        android:id="@+id/edit_student_usn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edit_student_name"
        app:layout_constraintEnd_toEndOf="@id/edit_student_name"
        app:layout_constraintTop_toBottomOf="@id/edit_student_name"
        android:hint="USN"/>

    <Spinner
        android:id="@+id/edit_branch_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edit_student_usn"
        app:layout_constraintEnd_toEndOf="@id/edit_student_usn"
        app:layout_constraintTop_toBottomOf="@id/edit_student_usn"/>

    <Button
        android:id="@+id/save_student_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        app:layout_constraintTop_toBottomOf="@id/edit_branch_spinner"
        app:layout_constraintEnd_toEndOf="@id/edit_branch_spinner"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_student_info"
        android:text="cancel"
        app:layout_constraintTop_toTopOf="@id/save_student_info"
        app:layout_constraintEnd_toStartOf="@id/save_student_info"
        android:layout_marginEnd="@dimen/margin_medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>